<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/cardCreditCardWidth"
            android:layout_height="@dimen/cardCreditCardHeight"
            android:layout_margin="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/imageViewCreditCard"
                    android:layout_width="@dimen/creditCardImgSize"
                    android:layout_height="@dimen/creditCardImgSize"
                    android:src="@drawable/def_img"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewCreditCardName"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="@string/creditCardName"
                            android:textSize="@dimen/creditCardTextSize"
                            android:maxLines="3"
                            android:gravity="center|top"
                            android:layout_alignParentBottom="true"
                            />

                </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>
